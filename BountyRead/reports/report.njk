---
layout: layout.njk
pagination:
  data: reports
  size: 1
  alias: report
  key: id
permalink: "reports/{{ report.id }}/index.html"
eleventyComputed:
  title: "{{ report.bug_type }} in {{ report.target }} - Bug Bounty Reports"
---

<div class="bg-gray-800 rounded-lg shadow-lg p-8 mb-10 max-w-4xl mx-auto relative">


  <!-- Main Report -->
  <h1 class="text-3xl font-bold text-yellow-400 mb-4">{{ report.title }}</h1>
  <div class="flex flex-wrap gap-4 text-gray-300 text-sm mb-6">
    <span><strong>Program:</strong> {{ report.program or report.target }}</span>
    <span><strong>Bug Type:</strong> {{ report.bug_type }}</span>
    <span><strong>Bounty:</strong> {{ report.bounty or "‚Äî" }}</span>
    <span><strong>Date:</strong> {{ report.date or "‚Äî" }}</span>
  </div>

  {% if report.tags %}
  <div class="flex flex-wrap gap-2 mb-8">
    {% for tag in report.tags %}
      <span class="bg-yellow-500 text-black rounded-full px-3 py-1 text-xs font-semibold">{{ tag }}</span>
    {% endfor %}
  </div>
  {% endif %}

  <section class="mb-10">
    <h2 class="text-xl font-semibold text-gray-200 mb-3">Summary</h2>
    <div class="text-gray-300 leading-relaxed">
      {{ report.summary | markdown | safe }}
    </div>
    <!--<p class="text-gray-300 leading-relaxed whitespace-pre-line break-words break-all">{{ report.summary }}</p>-->
  </section>

  {% if report.references %}
  <section class="mb-10">
    <h2 class="text-xl font-semibold text-gray-200 mb-3">References</h2>
    <ul class="list-disc list-inside text-gray-300 space-y-1">
      {% for ref in report.references %}
      <li>
        <a class="text-yellow-400 underline hover:text-yellow-300" href="{{ ref }}" target="_blank">{{ ref }}</a>
      </li>
      {% endfor %}
    </ul>
  </section>
  {% endif %}
<!-- Bottom action buttons -->
<div class="flex items-center justify-between mt-4 max-w-4xl mx-auto">
  <!-- Back link -->
  <a href="/"
     class="inline-flex items-center px-4 py-2 bg-gray-700 text-gray-200 rounded hover:bg-gray-600 transition"
     title="Back to reports">
    ‚Üê Back to Reports
  </a>

   
   <!--twitter-->
  <div class="flex items-center space-x-2">
    <button type="button" fill="currentColor" class="share-btn w-8 h-8 flex items-center justify-center bg-gray-700 hover:bg-gray-600 rounded text-gray-200" data-share="twitter" title="Share on X">
      <svg class="w-4 h-4 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24"><path d="M13.795 10.533 20.68 2h-3.073l-5.255 6.517L7.69 2H1l7.806 10.91L1.47 22h3.074l5.705-7.07L15.31 22H22l-8.205-11.467Zm-2.38 2.95L9.97 11.464 4.36 3.627h2.31l4.528 6.317 1.443 2.02 6.018 8.409h-2.31l-4.934-6.89Z"/></svg>
    </button>
    <!--linkedin-->
    <button type="button" class="share-btn w-8 h-8 flex items-center justify-center bg-gray-700 hover:bg-gray-600 rounded text-gray-200" data-share="linkedin" title="Share on LinkedIn">
      <svg  class="w-4 h-4 text-gray-300" viewBox="0 0 24 24" fill="currentColor"><path d="M4.98 3.5C4.98 4.88 3.86 6 2.48 6S0 4.88 0 3.5 1.12 1 2.5 1 4.98 2.12 4.98 3.5zM.22 8.98h4.52V24H.22V8.98zM8.58 8.98h4.34v2.05h.06c.6-1.14 2.06-2.35 4.24-2.35 4.53 0 5.36 2.98 5.36 6.85V24h-4.52v-7.38c0-1.76-.03-4.02-2.45-4.02-2.46 0-2.84 1.92-2.84 3.9V24H8.58V8.98z"/></svg>
    </button>

    <!--copy-->
    <button type="button" class="share-btn w-8 h-8 flex items-center justify-center bg-gray-700 hover:bg-gray-600 rounded text-gray-200" data-share="copy" title="Copy link">
      <svg class="w-5 h-5 text-gray-300 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.213 9.787a3.391 3.391 0 0 0-4.795 0l-3.425 3.426a3.39 3.39 0 0 0 4.795 4.794l.321-.304m-.321-4.49a3.39 3.39 0 0 0 4.795 0l3.424-3.426a3.39 3.39 0 0 0-4.794-4.795l-1.028.961"/></svg>
    </button>
  </div>
</div>


<script>

document.addEventListener("DOMContentLoaded", function() {
  const shareButtons = document.querySelectorAll(".share-btn");
  const pageUrl = window.location.href;
  const shareText = `üëÄ Checkout this Bug report - {{ report.bug_type }} in {{ report.program }} \n\nhttps://${document.domain}/reports/{{ report.id }}`;

  shareButtons.forEach(btn => {
    const type = btn.dataset.share;

    btn.addEventListener("click", function() {
      if(type === "twitter") {
        const url = `https://x.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(pageUrl)}`;
        window.open(url, "_blank", "noopener");
      } else if(type === "linkedin") {
        const url = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(pageUrl)}&summary=${encodeURIComponent(shareText)}`;
        window.open(url, "_blank", "noopener");
      } else if(type === "copy") {
        if(navigator.clipboard && navigator.clipboard.writeText) {
          navigator.clipboard.writeText(pageUrl).then(() => {
            const originalSvg = btn.innerHTML;
            // Swap to tick icon
            btn.innerHTML = `<svg class="w-5 h-5 text-green-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>`;
            // Revert after 3 seconds
            setTimeout(() => {
              btn.innerHTML = originalSvg;
            }, 3000);
          });
        } else {
          prompt("Copy this link:", pageUrl);
        }
      }
    });
  });
});
</script>